<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/UAgreen"
    tools:context="pt.rrochaua.ua_beav.fragments.Form1">


    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:gravity="center">



            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Identificação do Acidente \n"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/UAgreenLetters"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data/Hora\n"
                android:textAlignment="viewStart"
                android:textColor="@color/UAgreenLetters"
                android:textSize="20sp"
                android:textStyle="bold" />


            // Inserção da Data do Acidente


            <ImageButton
                android:id="@+id/btnDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/UAgreenLetters"
                android:src="@mipmap/ic_launcher_today" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center">
                <EditText
                    android:id="@+id/eTDia"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="Dia" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/" />
       
                <EditText
                    android:id="@+id/eTMes"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="Mes" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/" />
            
                <EditText
                    android:id="@+id/eTAno"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Ano" />
            </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="center">
        </LinearLayout>

            // Inserção da hora do Acidente

            
            <ImageButton
                android:id="@+id/btnTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/UAgreenLetters"
                android:src="@mipmap/ic_launcher_schedule"
                app:layout_constraintTop_toBottomOf="@+id/eTAno" />

            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center">

                <EditText
                    android:id="@+id/eTHora"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="Hora" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":" />

                <EditText
                    android:id="@+id/eTMin"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="Minutos" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\nLocalização\n"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/UAgreenLetters" />


            //controlo de localidade

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radioGroupLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButtonLoc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:text="Fora das localidades"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8" />

                <RadioButton
                    android:id="@+id/radioButtonLoc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:text="Dentro das localidades"
                    app:layout_constraintLeft_toLeftOf="@+id/radioButton"
                    app:layout_constraintTop_toBottomOf="@+id/radioButton" />


            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\nLocal do acidente(Informação Opcional)\n"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/UAgreenLetters" />


            // Inserção do Local de Acidente

            <EditText
                android:id="@+id/editTextLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\nCoordenadas\n"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/UAgreenLetters" />


            // Inserção da Latitude do Acidente


            <ImageButton
                android:id="@+id/buttonCoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/UAgreenLetters"
                android:src="@mipmap/ic_launcher_gps_fixed" />

            <EditText
                android:id="@+id/editTextCoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\nTipo de Acidente\n"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/UAgreenLetters" />


            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radioGroupTDA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioButtonTDA1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acidente sem vítimas" />

                <RadioButton
                    android:id="@+id/radioButtonTDA2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acidente com vítimas" />

            </RadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\nNatureza do Acidente\n"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/UAgreenLetters" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radioGroupNDA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radioButtonNDA1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Despiste" />

                <RadioButton
                    android:id="@+id/radioButtonNDA2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colisão" />

                <RadioButton

                    android:id="@+id/radioButtonNDA3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atropelamento" />

            </RadioGroup>


            <TextView
                android:id="@+id/textViewCond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\nNúmero de Condutores\n"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/UAgreenLetters"  />

            <EditText
                android:id="@+id/eTNumCond"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <Button
                android:id="@+id/btnokNCon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ok" />

            <LinearLayout
                android:id="@+id/llRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

            <Button
                android:id="@+id/btnGetResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Result" />


            // Botao para avançar para a próxima página

            <Button
                android:id="@+id/ButtonSegS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acidente sem Vítimas" />

            <Button
                android:id="@+id/ButtonSegC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acidente com Vítimas" />

        </LinearLayout>

    </ScrollView>
</FrameLayout>
