<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/UAgreen"
    tools:context="pt.rrochaua.ua_beav.fragments.VeicInt1">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:gravity="center"
                android:text="Veículo Interveniente"
                android:textColor="@color/UAgreenLetters"
                android:textSize="25sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\nFuga"
                android:textColor="@color/UAgreenLetters"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radioGroupFuga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/textViewPav">

                <RadioButton
                    android:id="@+id/radioButtonFuga1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sim" />

                <RadioButton
                    android:id="@+id/radioButtonFuga2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Não" />

            </RadioGroup>


            <TextView
                android:id="@+id/textViewPav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\nCategoria/Classe"
                android:textColor="@color/UAgreenLetters"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGroupCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/textViewPav">

                <RadioButton
                    android:id="@+id/radioButtonTipCat1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Velocipede" />

                <RadioButton
                    android:id="@+id/radioButtonTipCat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Velocipede com motor" />

                <RadioButton
                    android:id="@+id/radioButtonTipCat3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ciclomotor" />

                <RadioButton
                    android:id="@+id/radioButtonTipCat4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Motociclo cilindrada com 125cc ou menos" />

                <RadioButton
                    android:id="@+id/radioButtonTipCat5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Motociclo cilindrada com mais de 125cc" />

                <RadioButton
                    android:id="@+id/radioButtonTipCat6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Veículo ligeiro" />


                <RadioButton
                    android:id="@+id/radioButtonTipCat7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Veículo pesado" />


                <RadioButton
                    android:id="@+id/radioButtonTipCat8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Veículo agrícola" />

                <RadioButton
                    android:id="@+id/radioButtonTipCat9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Máquina industrial" />

                <RadioButton
                    android:id="@+id/radioButtonTipCat10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Veículo sobre carris" />

                <RadioButton
                    android:id="@+id/radioButtonTipCat11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Veículo de tração animal" />

                <RadioButton
                    android:id="@+id/radioButtonTipCat12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quadriciclo" />

                <RadioButton
                    android:id="@+id/radioButtonTipCat13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desconhecido" />


            </RadioGroup>

            <TextView
                android:id="@+id/textViewLig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\nTipo de Veículo Ligeiro:"
                android:textColor="@color/UAgreenLetters"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone"  />


            <TextView
                android:id="@+id/textViewPes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\nTipo de Veículo Pesado:"
                android:textColor="@color/UAgreenLetters"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone"  />


            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radioGroupTVeic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/textViewPav"
                android:visibility="gone" >


                <RadioButton
                    android:id="@+id/radioButtonTVeic1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passageiros" />

                <RadioButton
                    android:id="@+id/radioButtonTVeic2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mercadorias" />

                <RadioButton
                    android:id="@+id/radioButtonTVeic3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Misto" />

                <RadioButton
                    android:id="@+id/radioButtonTVeic4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trator" />

                <RadioButton
                    android:id="@+id/radioButtonTVeic5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Veículo especial" />


            </RadioGroup>


            <TextView
                android:id="@+id/textViewVEsp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\nTipo de veículo especial"
                android:textColor="@color/UAgreenLetters"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone" />


            <EditText
                android:id="@+id/editTextVEsp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:visibility="gone"  />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\nTipo de Serviço"
                android:textColor="@color/UAgreenLetters"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radioGroupTDS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/textViewPav">

                <RadioButton
                    android:id="@+id/radioButtonTipTDS1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Particular" />

                <RadioButton
                    android:id="@+id/radioButtonTipTDS2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Público" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\nAno de Matrícula"
                android:textColor="@color/UAgreenLetters"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextADM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="number" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\nInspeção Periódica"
                android:textColor="@color/UAgreenLetters"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radioGroupIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/textViewPav">

                <RadioButton
                    android:id="@+id/radioButtonTipIP1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Não obrigatória" />

                <RadioButton
                    android:id="@+id/radioButtonTipIP2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Válida" />

                <RadioButton
                    android:id="@+id/radioButtonTipIP3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sem validade" />

            </RadioGroup>

            <TextView
                android:id="@+id/textViewMP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\nTransporta mercadorias perigosas"
                android:textColor="@color/UAgreenLetters"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radioGroupTMerc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/textViewPav">

                <RadioButton
                    android:id="@+id/radioButtonTipTMerc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sim" />

                <RadioButton
                    android:id="@+id/radioButtonTipTMerc2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Não" />

            </RadioGroup>

            <TextView
                android:id="@+id/textViewADR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\nCertificado ADR"
                android:textColor="@color/UAgreenLetters"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone"  />


            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radioGroupCADR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/textViewPav"
                android:visibility="gone" >

                <RadioButton
                    android:id="@+id/radioButtonCADR1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Válido" />

                <RadioButton
                    android:id="@+id/radioButtonCADR2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sem validade" />

                <RadioButton
                    android:id="@+id/radioButtonCADR3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inexistente" />

            </RadioGroup>

            <TextView
                android:id="@+id/textViewMAT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\nMatéria/objeto perigoso transportado"
                android:textColor="@color/UAgreenLetters"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone"  />

            <EditText
                android:id="@+id/editTextCADR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:visibility="gone"  />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\nCarga/Lotação/Pneus"
                android:textColor="@color/UAgreenLetters"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\nCarga/Lotação"
                android:textColor="@color/UAgreenLetters"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radioGroupCL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/textViewPav">

                <RadioButton
                    android:id="@+id/radioButtonCL1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sem carga" />

                <RadioButton
                    android:id="@+id/radioButtonCL2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Com excesso de carga" />

                <RadioButton
                    android:id="@+id/radioButtonCL3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carga bem acondicionada" />

                <RadioButton
                    android:id="@+id/radioButtonCL4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carga mal acondicionada" />

                <RadioButton
                    android:id="@+id/radioButtonCL5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Com lotação excedida" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\nPneus"
                android:textColor="@color/UAgreenLetters"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radioGroupPneu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/textViewPav">

                <RadioButton
                    android:id="@+id/radioButtonPneu1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sem deficiência" />

                <RadioButton
                    android:id="@+id/radioButtonOneu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Com deficiência" />


            </RadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\nTacógrafo"
                android:textColor="@color/UAgreenLetters"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radioGroupTaco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/textViewPav">

                <RadioButton
                    android:id="@+id/radioButtonTaco1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sem tacógrafo ou destivado" />

                <RadioButton
                    android:id="@+id/radioButtonTaco2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Com tacógrafo" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\nSeguro"
                android:textColor="@color/UAgreenLetters"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radioGroupSeg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/textViewPav">

                <RadioButton
                    android:id="@+id/radioButtonSeg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Com seguro" />

                <RadioButton
                    android:id="@+id/radioButtonSeg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sem seguro" />

                <RadioButton
                    android:id="@+id/radioButtonSeg3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Isento" />

            </RadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\nIncêndio Posterior"
                android:textColor="@color/UAgreenLetters"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radioGroupInPo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/textViewPav">

                <RadioButton
                    android:id="@+id/radioButtonInPo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Com incêndio" />

                <RadioButton
                    android:id="@+id/radioButtonInPo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sem incêndio" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\nNúmero de Passageiros"
                android:textColor="@color/UAgreenLetters"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextNPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="number" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\nCondutor Presente e Identificado"
                android:textColor="@color/UAgreenLetters"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radioGroupCondP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/textViewPav">

                <RadioButton
                    android:id="@+id/radioButtonCondP1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sim" />

                <RadioButton
                    android:id="@+id/radioButtonCondP2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Não" />

            </RadioGroup>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/ButtonAntVeicInt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anterior" />

                <Button
                    android:id="@+id/ButtonSegVeicInt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seguinte" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/ButtonAntTeste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anterior TESTE" />

                <Button
                    android:id="@+id/ButtonSegTeste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seguinte TESTE" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</FrameLayout>