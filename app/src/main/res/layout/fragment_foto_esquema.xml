<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.rrochaua.ua_beav.fragments.FotoEsquema">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewPav"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:text="Fotografias e Esquema do Sinistro"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/buttonFot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fotografar" />

            <Button
                android:id="@+id/buttonEFot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escolher Fotos" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esquema"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/editTextEsq"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text|number"
                app:layout_constraintLeft_toLeftOf="@+id/textViewPav" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:gravity="center">
                <Button
                    android:id="@+id/ButtonAntFotoEsquema"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anterior" />
                <Button
                    android:id="@+id/ButtonSegFotoEsquema"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seguinte" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</FrameLayout>
